<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomDialogStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="EditTextPasswordStyle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="TextViewListEmpty">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/no_notes</item>
        <item name="android:textSize">@dimen/print_medium</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextViewTitleFragment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/print_large</item>
    </style>

    <style name="SearchViewNotes">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:queryHint">@string/search_notes</item>
        <item name="queryBackground">@color/transparent</item>
    </style>

    <style name="CardViewAroundSearchView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="CheckBox" parent="Theme.MaterialComponents.Light">
        <item name="colorControlActivated">@color/teal_200</item>
    </style>

</resources>